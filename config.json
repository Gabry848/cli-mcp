{
  "security": {
    "allowedPartitions": [
      "C:\\Users\\",
      "D:\\Projects\\",
      "E:\\Development\\"
    ],
    "blockedCommands": [
      "rm",
      "rmdir", 
      "del",
      "format",
      "fdisk",
      "diskpart",
      "shutdown",
      "reboot",
      "restart",
      "halt",
      "poweroff",
      "net user",
      "net localgroup",
      "adduser",
      "deluser",
      "passwd",
      "chpasswd",
      "sudo",
      "su",
      "runas",
      "reg delete",
      "reg add",
      "regedit",
      "gpedit",
      "sc delete",
      "sc create",
      "sc config",
      "taskkill",
      "wmic",
      "powercfg",
      "bcdedit"
    ],
    "allowedCommandPatterns": [
      "^(ls|dir|cd|pwd|echo|cat|type|find|grep|head|tail|sort|wc)\\b",
      "^(git|npm|node|python|pip)\\b",
      "^(Get-|Set-|New-|Remove-).*(Process|Service|Item|Content|Location)\\b"
    ],
    "maxCommandLength": 500,
    "timeoutSeconds": 30,
    "allowNetworkCommands": false
  }
}
